			{{ content | safe }}
		</div>
	</main>

	<!-- Sidebar -->
	<aside>
		<form action="">
			<button>â¬‡ Download</button>
		</form>
		<p class="aside-footer">{{pkg.name}} - v{{pkg.version}}</p>
